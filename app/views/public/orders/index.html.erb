
<div class = "container mt-5">
  <div class="row mb-4">
    <h4 class = "col-2 text-center" style="background-color: #E6E6E6;">注文履歴一覧</h4>
  </div>

  <div class="row">
    <table class="table table-bordered border-dark">
      <thead class="table-active">
        <tr>
          <th class="col-2" style="background-color: #E6E6E6;">注文日</th>
          <th class="col-4" style="background-color: #E6E6E6;">配送先</th>
          <th class="col-2" style="background-color: #E6E6E6;">注文商品</th>
          <th class="col-1" style="background-color: #E6E6E6;">支払金額</th>
          <th class="col-1 text-nowrap" style="background-color: #E6E6E6;">ステータス</th>
          <th class="col-2" style="background-color: #E6E6E6;">注文詳細</th> 
        </tr>
      </thead> 
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td class = "align-middle"><%= order.created_at.strftime("%Y年%m月%d日") %></td>
            <td class = "align-middle">
              〒<%= order.postal_code %><br> 
              <%= order.address %><br>
              <%= order.name %>
            </td>
            <td class = "align-middle">
              <% order.items.each do |item| %>
                <%= item.name %><br>
              <% end %>
            </td>
            <td class = "align-middle"><%= number_to_currency(order.total_payment) %></td>
            <td class = "align-middle"><%= order.status_i18n %></td>
            <td class = "align-middle text-center"><%= link_to "表示する", order_path(order), class: "btn btn-primary" %></td>
          </tr>
        <% end %>
      </tbody>
    </table> 
  </div>
</div>
