<div class="row mt-2 justify-content-center">
  <div class="col-10">
    <table class="table">
      <thead style="background-color: #E6E6E6;">
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td>
              <%= link_to admin_item_path(item.id), class:'text-dark', style: 'text-decoration: underline' do %>
                <%= item.name %>
              <% end %>
            </td>
            <td><%= number_with_delimiter(item.price) %></td>
            <td><%= item.genre.name %></td>
            <% if item.is_active == true %>
              <td class="text-success"><strong>販売中</strong></td>
            <% else %>
              <td class="text-secondary"><strong>販売停止中</strong></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate items %>
  </div>
</div>