<div class="container">
  <div class="row">
    <h3 class="m-5", style="background-color: #E6E6E6;">会員情報編集</h3>
  </div>
  <%= form_with model: @customer, url: customer_path(@customer), method: :patch, local: true do |f| %>
     
    <div class="row mb-2">
      <div class="col-3">氏名</div>
      <div class="col-3"><%= f.text_field :last_name %></div>
      <div class="col-3"><%= f.text_field :first_name %></div>
    </div>
    <div class="row mb-2">
      <div class="col-3">フリガナ</div>
      <div class="col-3"><%= f.text_field :last_name_kana %></div>
      <div class="col-3"><%= f.text_field :first_name_kana %></div>
    </div>
    <div class="row mb-2">
      <div class="col-3">郵便番号</div>
      <div class="col-3"><%= f.text_field :post_code %></div>
    </div>
    <div class="row mb-2">
      <div class="col-3">住所</div>
      <div class="col-3"><%= f.text_field :address %></div>
    </div>
    <div class="row mb-2">
      <div class="col-3">電話番号</div>
      <div class="col-3"><%= f.text_field :telephone_number %></div>
    </div>
    <div class="row mb-2">
      <div class="col-3">メールアドレス</div>
      <div class="col-3"><%= f.text_field :email %></div>
    </div>

    <div class="row mb-2">
      <div class="col-3"></div>
      <div class="col-3 d-flex gap-2 mt-2">
        <%= f.submit '   編集内容を保存   ', class: "btn btn-sm btn-success me-2" %>
        <%= link_to "退会する",  customer_customers_unsubscribe_path(@customer), class: "btn btn-sm btn-danger" %>
      </div>
    </div>   
<% end %>
     