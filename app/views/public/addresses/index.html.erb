<div class="container">
  <div class="row">
    <h3 class="m-5", style="background-color: #E6E6E6;">配送先登録/一覧</h3>
  </div>
    <%= form_with model: @cstomer, url: customer_address_path, local: true do |f| %>
      <div class="row mb-2">
       <div class="col-3"><%= f.label :post_code, "郵便番号(ハイフンなし)" %></div>
       <div class="col-3"><%= f.text_field :post_code, placeholder: "0000000" %></div>
      </div>

      <div class="row mb-2">
        <div class="col-3"><%= f.label :address, "住所" %></div>
        <div class="col-3"><%= f.text_field :address,  size:"75x1", placeholder: "東京都渋谷区代々木神園町0-0" %></div>
      </div>

      <div>
        <div class="col-3"><%= f.label :name, "宛名" %></div>
        <div class="col-3"><%= f.text_field :name, placeholder: "令和道子" %></div>
        <div class="col-3">
      </div>