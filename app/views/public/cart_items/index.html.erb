
<div class="container p-5">

  <div class="row mb-4">
    <h4 style="background-color: #E6E6E6;">ショッピングカート</h4>
    <div class="col d-flex justify-content-end">
      <%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete, class: "btn btn-danger btn-md" %>
    </div>
  </div>

  <table class="table table-bordered border-dark">
    <thead class="table-active">
      <tr>
        <th class="col-4">商品名</th>
        <th class="col-2">単価(税込)</th>
        <th class="col-2">数量</th>
        <th class="col-2">小計</th>
        <th class="col-2"></th>
      </tr>
    </thead>
    <tbody>
      <% total = 0 %>
      <% if current_customer.cart_items.present? %>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td class="align-middle">
              <%= image_tag cart_item.item.get_image(90, 60) %>
              <%= cart_item.item.name %>
            </td>
            <td class="align-middle"><%= number_to_currency(cart_item.item.with_tax_price) %></td>
            <td class="align-middle">
              <%= form_with model: cart_item, url: cart_item_path(cart_item), local: true, method: :patch do |f| %>
                <%= f.select :amount, (1..10), selected: cart_item.amount %>
                <%= f.submit "変更", class: "btn btn-success btn-sm" %>
              <% end %>
            </td>
            <td class="align-middle">
              <%= number_to_currency(cart_item.subtotal) %>
            </td>
            <td class="align-middle">
              <%= link_to "削除する", cart_item_path(cart_item), method: :delete, class: "btn btn-danger" %>
            </td>
          </tr>
          <% total += cart_item.subtotal %>
        <% end %>
      <% end %>
      
    </tbody>
  </table>

  <div class="row mt-5">
    <div class="col-8 pl-5">
      <%= link_to "買い物を続ける", root_path, class: "btn btn-primary" %>
    </div>
    <div class="col-4">
      <table class="table table-bordered border-dark">
        <tr>
          <th class="table-active">合計金額</th>
          <td><%= number_to_currency(total) %></td>
        </tr>
      </table>
    </div>
  </div>

  <% if @cart_items.any? %>
    <div class="text-center">
      <%= link_to " 情報入力に進む ", new_order_path, class: "btn btn-success" %>
    </div>
  <% end %>

</div>
