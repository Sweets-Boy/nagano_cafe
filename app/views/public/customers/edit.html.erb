<div class="container">
  <div class="row">
    <h3 class="m-5", style="background-color: #E6E6E6;">会員情報編集</h3>
  </div>
  <%= form_with url: customers_my_page_path, method: :patch, scope: :customer, local: true do |f| %>
     
    <div class="row mb-2">
      <div class="col-3">氏名</div>
      <div class="col-3"><%= f.text_field :last_name, class: "form-control", style: "border-radius: 5px; border: 1px solid black;" %></div>
      <div class="col-3"><%= f.text_field :first_name, class: "form-control", style: "border-radius: 5px; border: 1px solid black;" %></div>
    </div>
    <div class="row mb-2">
      <div class="col-3">フリガナ</div>
      <div class="col-3"><%= f.text_field :last_name_kana, class: "form-control", style: "border-radius: 5px; border: 1px solid black;" %></div>
      <div class="col-3"><%= f.text_field :first_name_kana, class: "form-control", style: "border-radius: 5px; border: 1px solid black;" %></div>
    </div>
    <div class="row mb-2">
      <div class="col-3">郵便番号</div>
      <div class="col-3"><%= f.text_field :postal_code, class: "form-control", style: "border-radius: 5px; border: 1px solid black;" %></div>
    </div>
    <div class="row mb-2">
      <div class="col-3">住所</div>
      <div class="col-3"><%= f.text_field :address, class: "form-control", style: "border-radius: 5px; border: 1px solid black;" %></div>
    </div>
    <div class="row mb-2">
      <div class="col-3">電話番号</div>
      <div class="col-3"><%= f.text_field :telephone_number, class: "form-control", style: "border-radius: 5px; border: 1px solid black;" %></div>
    </div>
    <div class="row mb-2">
      <div class="col-3">メールアドレス</div>
      <div class="col-3"><%= f.text_field :email, class: "form-control", style: "border-radius: 5px; border: 1px solid black;" %></div>
    </div>

    <div class="row mb-2">
      <div class="col-3"></div>
      <div class="col-3 d-flex gap-2 mt-2">
        <%= f.submit '   編集内容を保存   ', class: "btn btn-sm btn-success me-2" %>
      </div>
        <div style="width: 60px;"></div>
      <div class="col-5 ">
        <%= link_to "退会する",  customer_customers_unsubscribe_path(@customer), class: "btn btn-sm btn-danger" %>
      </div>
    </div>   
<% end %>
     