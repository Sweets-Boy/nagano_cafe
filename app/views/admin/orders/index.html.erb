
<% if flash[:alert] %>
  <%= flash[:alert] %>
<% end %>

<div class="container">
  <div class="row">
    <h4 class = "col-4 my-3 mx-5 text-center" style = "background-color: #E6E6E6;">
    <%= @customer.last_name + @customer.first_name %> さんの注文履歴</h4>
  </div>
</div>

<div class="container">
  <div class="row mx-5">
    <% if @orders.present? %>
      <table class="table table-hover">
        <thead>
          <tr class="table-active">
            <th class="col-2">購入日時</th>
            <th class="col-2">注文個数</th>
            <th class="col-2">注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'), admin_order_path(order) %></td>
              <td><%= order.order_details.sum(:amount) %></td>
              <td><%= order.status_i18n %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <%= paginate @orders %>

    <% else %>
      <p class="text-center">注文履歴が見つかりません。</p>
    <% end %>
  </div>
</div>

