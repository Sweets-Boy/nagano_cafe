
<div class="container">
  <div class="row">
    <h4 class = "col-2 text-center" style="background-color: #E6E6E6;">注文履歴詳細</h2>
  </div>

  <div class="row my-2">
    <strong class="col-2">購入者</strong>
    <div class="col-6">
      <%= link_to admin_customer_path(@order.customer) do %>
        <%= @order.customer.last_name %>
        <%= @order.customer.first_name %>
      <% end %>
    </div>
  </div>
  <div class="row my-2">
    <strong class="col-2">注文日</strong>
    <div class="col-6">
      <%= @order.created_at.strftime('%Y/%m/%d') %></td>
    </div>
  </div>
  <div class="row my-2">
    <strong class="col-2">配送先</strong>
    <div class="col-6">〒<%= @order.postal_code %> <%= @order.address %>
      <br />
      <%= @order.name %>
    </div>
  </div>
  <div class="row my-2">
    <strong class="col-2">支払方法</strong>
    <div class="col-6"><%= @order.payment_method_i18n %></div>
  </div>
  <div class="row my-2">
    <strong class="col-2">注文ステータス</strong>
    <div class="col-6">
      <%= form_with model:@order, url: admin_order_path(@order), method: :patch, local: true do |f| %>
        <%= f.select :status, Order.statuses %>
        <%= f.submit "更新", class: "btn btn-success mx-3" %>
      <% end %>
    </div>
  </div>

  <div class="row mt-5">
    <div class="col-9">
      <table class="table table-hover">
        <thead class="table-active">
          <tr>
            <th class="col-2">商品名</th>
            <th class="col-2">単価（税込）</th>
            <th class="col-1">数量</th>
            <th class="col-1">小計</th>
            <th class="col-3">製作ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @order_details.each do |order_detail| %>
            <tr>
              <td><%= order_detail.item.name %></td>
              <td><%= number_to_currency(order_detail.price) %></td>
              <td><%= order_detail.amount %>個</td>
              <td><%= number_to_currency(order_detail.price * order_detail.amount) %></td>
              <td>
                <%= form_with model:order_detail, url: admin_order_detail_path(order_detail), method: :patch, local: true do |f|  %>
                  <%= f.select :making_status, options_from_collection_for_select(Order_details.all, :making_status ) %>
                  <%= f.submit '更新', class: "btn btn-success mx-5" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-3 align-items-end">
      <table>
        <tr>
          <th class="col-2">商品合計</th>
          <td class="col-1 text-right"><%= number_to_currency(@order.total_payment - @order.shipping_cost) %>
          </td>
        </tr>
        <tr>
          <th class="col-2">送料</strong></th>
          <td class="col-1 text-right"><%= number_to_currency(@order.shipping_cost) %>
          </td>
        </tr>
        <tr>
          <th class="col-2">請求合計金額</th>
          <td class="col-1 text-right"><%= number_to_currency(@order.total_payment) %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>