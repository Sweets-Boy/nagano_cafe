<div class="col-2">
  <div class="border border-dark" style="height: 300px;">
    <p class="text-center border-bottom border-dark mt-1">ジャンル検索</p>

    <ul class="p-0 ml-2" style="list-style: none;">
      <% genres.each do |genre| %>
        <li class="mx-3 my-2"><%= link_to genre.name, genre_search_path(genre_id: genre.id), method: :get, style:'color:#000000;' %></li>
      <% end %>
    </ul>

  </div>
</div>