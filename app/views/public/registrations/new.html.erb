<h3>新規会員登録</h3>
  <%= form_with model: @customer, url: customer_registration_path, local: true do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
    <table>
      <tr>
        <td><%= f.label :full_name,"名前" %></td>
        <td>(姓)</td>
        <td><%= f.text_field :last_name, autofocus: true,placeholder: "令和" %></td>
        <td>(名)</td>
        <td><%= f.text_field :first_name,placeholder: "道子" %></td>
      </tr>
      <tr>
        <td><%= f.label :full_name_kana,"フリガナ" %></td>
        <td>(セイ)</td>
        <td><%= f.text_field :last_name_kana,placeholder: "レイワ" %></td>
        <td>(メイ)</td>
        <td><%= f.text_field :first_name_kana,placeholder: "ミチコ" %></td>
      </tr>
      <tr>
        <td><%= f.label :email,"メールアドレス" %></td>
        <td></td>
        <td><%= f.email_field :email, autocomplete: "email",placeholder: "sample@example.com" %></td>
      </tr>
      <tr>
        <td><%= f.label :post_code,"郵便番号(ハイフンなし)" %></td>
        <td></td>
        <td><%= f.text_field :post_code, placeholder: "0000000" %></td>
      </tr>
      <tr>
        <td><%= f.label :address,"住所" %></td>
        <td></td>
        <td><%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0" %></td>
      </tr>
      <tr>
        <td><%= f.label :telephone_number,"電話番号(ハイフンなし)" %></td>
        <td></td>
        <td><%= f.text_field :telephone_number, placeholder: "0000000000" %></td>
      </tr>
      <tr>
        <td><%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %></td>
        <td><%= f.password_field :password, autocomplete: "new-password" %></td>
      </tr>
      <tr>
        <td><%= f.label :password_confirmation,  "パスワード(確認用)" %></td>
        <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
      </tr>
      <tr>
        <td><%= f.submit "新規登録",class: "btn btn-success" %></td>
      </tr>
    </table>
  <% end %>
<h3>既に登録済みの方</h3>
<div><%= link_to "こちら", new_customer_session_path %>からログインしてください</div>
