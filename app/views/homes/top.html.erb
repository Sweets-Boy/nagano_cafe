<div class="container">

  <div class="row mt-5">

    <%= render 'homes/genre_index', genres:@genres %>

    <div class="col-9 offset-1">

      <div class="row border-dark" style="height: 300px;">
        <div class="col-6 offset-2">
          <p class="mt-5 pt-4 align-baseline border border-dark" style="height: 150px;">
            ようこそ、ながのCAKEへ！<br>
            このサイトは、ケーキ販売のECサイトになります。<br>
            会員でない方も商品の閲覧はできますが、<br>
            購入には会員登録が必要になります。<br>
          </p>
        </div>
      </div>

      <div class="row ml-2 mb-2">
        <h2 class="fs-2 font-weight-bold">新着商品</h2>
      </div>

      <div class="row">

        <% @items.each do |item| %>
          <div class="col-3">
            <%= link_to item_path(item.id) do %>
              <%= image_tag item.get_image(200, 100) %>
            <% end %>
            <p><%= item.name %></p>
            <p>¥<%= number_with_delimiter(item.price) %></p>
          </div>
        <% end %>

        
      </div>

      <div class="row justify-content-end">
        <div class="col-2 offset-10 p-0">
          <%= link_to '全ての商品を見る >', items_path, class:'text-center' %>
        </div>
      </div>

    </div>
  </div>
</div>
