<%# The container tag
  - available local variables
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
    paginator:     the paginator that renders the pagination tags inside
-%>
<%= paginator.render do -%>
  <nav class="pagination" role="navigation" aria-label="pager">
   <div style="margin-right:20px;"> <%= first_page_tag unless current_page.first? %></div>
    <div style="margin-right:20px;"><%= prev_page_tag unless current_page.first? %></div>
    <% each_page do |page| -%>
      <div style="margin-right:20px;">
      <% if page.display_tag? -%>
        <%= page_tag page %>
      <% elsif !page.was_truncated? -%>
        <%= gap_tag %>
      <% end -%></div>
    <% end -%>
    <% unless current_page.out_of_range? %>
     <div style="margin-right:20px;"><%= next_page_tag unless current_page.last? %></div>
      <%= last_page_tag unless current_page.last? %>
    <% end %>
  </nav>
<% end -%>
