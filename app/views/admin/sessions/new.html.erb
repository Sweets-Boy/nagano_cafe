<div class="container">
  <div class="row">
    <h3 class = "col-3 m-5 text-center" style="background-color: #E6E6E6;"> 管理者ログイン </h3>
  </div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="my-5">
      <div class="row justify-content-center mb-3">
        <div class="col-2"><%= f.label :email ,"メールアドレス", class: "form-label"  %></div>
        <div class="col-5"><%= f.email_field :email, size:"50x1", autofocus: true, placeholder: "sample@example.com", autocomplete: "email" %></div>
      </div>

      <div class="row justify-content-center ">
        <div class="col-2"><%= f.label :password, "パスワード" %></div>
        <div class="col-5"><%= f.password_field :password, size:"50x1",  autocomplete: "current-password" %></div>
      </div>

      <div class="col-10 actions text-center mt-5">
        <%= f.submit "    ログイン    ", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>

</div>


